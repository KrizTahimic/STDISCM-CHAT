import socket 

host = "localhost"
port = 8080
#create socket
sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
#connect to server
sock.connect((host, port))
#recieve message
message = sock.recv(1024).decode()

#while messages are being sent then print message 
while message:
    print("Message : ", message)
    message = sock.recv(1024).decode()


sock.close()